Patual= int(input("Digite o valor do produto "))
Vmensal= int(input("Digite a média mensal "))
if Patual < 30 and Vmensal < 500:
  Pnovo= Patual + (Patual*0.1)
  print("O novo preço do produto é ", Pnovo)
else:
  if Patual >= 30 and Patual < 80 and Vmensal >= 500 and Vmensal < 1000:
    Pnovo = Patual + (Patual*0.15)
    print("O novo preço do produto é ", Pnovo)
  else:
    if Patual >= 80 and Vmensal > 1000:
      Pnovo = Patual - (Patual*0.05)
      print("O novo preço do produto é ", Pnovo)
    else:
      print ("O Valor do produto continua o mesmo " ,Patual)
  